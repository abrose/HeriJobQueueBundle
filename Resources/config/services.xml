<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="jobqueue" class="Heri\Bundle\JobQueueBundle\Service\QueueService">
            <argument type="service" id="logger" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <property type="service" id="doctrine.queue.adapter" name="adapter" />
            <property type="service" id="jobqueue.listen.command" name="command" />
            <tag name="monolog.logger" channel="jobqueue" />
        </service>
        <service id="doctrine.queue.adapter" class="Heri\Bundle\JobQueueBundle\Adapter\DoctrineAdapter">
            <argument type="collection" />
            <property type="service" id="doctrine.orm.entity_manager" name="em" /> 
        </service>
        <service id="jobqueue.listen.command" class="Heri\Bundle\JobQueueBundle\Command\QueueListenCommand">
            <tag name="console.command" />
        </service>
    </services>
    
</container>
